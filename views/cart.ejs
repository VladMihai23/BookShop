<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<header>
    <%- include('navbar'); %>
</header>

<div class="container mt-5">

    <h2 class="mb-4 text-center">Shopping Cart</h2>

    <% if (cart.length === 0) { %>

        <div class="alert alert-info text-center">
            Your cart is empty.
        </div>

        <div class="text-center">
            <a href="/" class="btn btn-primary">
                Back to Shop
            </a>
        </div>

    <% } else { %>

        <table class="table table-bordered align-middle shadow-sm">
            <thead class="table-dark">
            <tr>
                <th>Book</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            <% cart.forEach(item => { %>
                <tr>
                    <td>
                        <img src="<%= item.image_url %>" width="50" class="me-2 rounded shadow-sm">
                        <%= item.title %>
                    </td>

                    <td><%= item.qty %></td>

                    <td>$<%= item.price %></td>

                    <td>$<%= item.price * item.qty %></td>

                    <td>
                        <form action="/cart/remove/<%= item.id %>" method="POST">
                            <button class="btn btn-danger btn-sm">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>

        <h3 class="text-end fw-bold">Total: $<%= total %></h3>

        <div class="text-end mt-4">
            <a href="/checkout" class="btn btn-success btn-lg">
                Proceed to Checkout
            </a>
        </div>

    <% } %>

</div>

</body>
</html>
